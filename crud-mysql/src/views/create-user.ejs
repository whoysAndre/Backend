<body>
  <h1>Create User</h1>
  <form action="/users/create" method="post" class="container">
    <div class="form-data">
      <label for="name">Name:</label>
      <input type="text" name="name" id="name">
    </div>
    <div class="form-data">
      <label for="age">Age:</label>
      <input type="text" name="age" id="age">
    </div>

    <input type="submit" class="btn-send" value="Register">
  </form>
</body>
